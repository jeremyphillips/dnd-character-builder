{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/app": ["app"],
      "@/app/*": ["app/*"],
      "@/characterBuilder": ["features/characterBuilder/index.ts"],
      "@/features/messaging": ["features/messaging/index.ts"],
      "@/characterBuilder/context": ["features/characterBuilder/context/index.ts"],
      "@/ui/elements": ["ui/elements/index.ts"],
      "@/ui/elements/*": ["ui/elements/*"],
      "@/ui/forms": ["ui/forms/index.ts"],
      "@/ui/forms/*": ["ui/forms/*"],
      "@/ui/components": ["ui/components/index.ts"],
      "@/ui/components/*": ["ui/components/*"],
      "@/ui/avatar": ["ui/avatar/index.ts"],
      "@/ui/avatar/*": ["ui/avatar/*"],
      "@/ui/cards": ["ui/cards/index.ts"],
      "@/ui/cards/*": ["ui/cards/*"],
      "@/ui/badges": ["ui/badges/index.ts"],
      "@/ui/badges/*": ["ui/badges/*"],
      "@/data": ["data/index.ts"],
      "@/data/*": ["data/*"],
      "@/domain/*": ["domain/*"],
      "@/domain/shared": ["domain/shared/index.ts"],
      "@/chat": ["features/chat/index.ts"],
      "@/services": ["services/index.ts"],
      "@/services/*": ["services/*"],
      "@/steps": ["features/characterBuilder/steps/index.ts"],
      "@/hooks": ["hooks/index.ts"],
      "@/hooks/*": ["hooks/*"],
      "@/shared": ["../shared/types/index.ts"],
      "@/shared/*": ["../shared/*"]
    }  
  },
  "include": ["src"]
}
